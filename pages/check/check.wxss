.card .title{
box-sizing: border-box;
font-size: 30rpx;
height: 60rpx;
line-height: 60rpx;
padding-right: 15rpx;
position: relative;
text-align: justify;
}

.button{
  align-items: center;
border: 0rpx;
box-sizing: border-box;
display: inline-flex;
font-size: 28rpx;
height: 64rpx;
justify-content: center;
line-height: 1;
margin-left: 0;
margin-right: 0;
overflow: visible;
padding: 0 30rpx;
position: relative;
text-align: center;
text-decoration: none;
transform: translate(0rpx);
margin-bottom: 20rpx;
margin-top: 20rpx;
background-color: #93DB70;
color: #fff;
}

.buttonField{
  box-sizing: border-box;
display: flex;
flex-direction: column;
padding: 30rpx;
}

.check{
   display: flex;
   justify-content: space-between;
   margin: 0 25px;
}

.van-button{
  width: 125px;
}


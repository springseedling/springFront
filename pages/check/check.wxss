
.swiper{
  width: 100%;
  height: 100vh;
}

swiper{
  height: 100%;
}

.top-bar {
  background: #93DB70;
  border-radius: 0 0 30% 30%;
  height: 180rpx;
  overflow: hidden;
}

.top-bar .title {
  box-sizing: border-box;
  color: #fff;
  font-size: 34rpx;
  font-weight: 700;
  margin-top: 34rpx;
  text-align: center;
}

.top-bar .warn {
  color: #fff;
  font-size: 24rpx;
  margin-top: 10rpx;
  text-align: center;
}

.card {
  box-sizing: border-box;
  background: #fff;
  border-radius: 20rpx;
  margin: 30rpx;
  padding: 20rpx;
}


.event-title {
  align-items: center;
  display: flex;
  min-height: 80rpx;
  padding: 0 30rpx;
}

.event-title .title {
  color: #000;
  font-size: 30rpx;
  font-weight: 700;
}

.event-detail {
  color: #666;
  display: flex;
  line-height: 60rpx;
  padding: 0 30rpx;
}

.cu-form-group{
  box-sizing: border-box;
  align-items: center;
background-color: #fff;
display: flex;
justify-content: space-between;
min-height: 100rpx;
padding: 1rpx 30rpx;
border-top: 1rpx solid #eee;
}


.card input{
  box-sizing: border-box;
  color: #555;
  flex: 1;
  font-size: 30rpx;
  padding-right: 20rpx;
}

